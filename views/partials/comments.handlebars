<div class="comments">
    {{#each comments}}
    <section class="comment comment-content">
    <div class="meta">
      {{user.username}} on {{format_date created_at}} said:
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
  <form class="add-comment">
    <div>
      <label for="comment"></label>
      <input type="text" id="comment" class="col-md-6" />
      <button type="submit" class="col-md-3 ms-auto">Add Comment</button>
    </div>
  </form>
</div>